@require './theme.styl'
@require './components/*'
@require './views/*'

html {
  overflow-y: auto !important;

  &.hide-scroll {
    overflow-y: hidden !important;
  }
}

h1 {
  font-size: 28px;
  font-weight: 500;
  line-height: 32px;
  letter-spacing: 0.4px;
  font-feature-settings: 'pnum' on, 'lnum' on;
}

h1, h2, h3, h4, h5, h6 {
  line-height: 1.2
}

a, p {
  font-size: 16px;
  line-height: 1.2
}

* {
  ::selection {
    background-color: $colors.grey.darken-1;
    color: $colors.shades.white;
  }

  ::-webkit-scrollbar {
    width: 6px;
    height: 6px;
  }

  ::-webkit-scrollbar-track {
    background: $colors.grey.lighten-3;
  }

  ::-webkit-scrollbar-thumb {
    background: $colors.grey.base;

    &:hover {
      background: $colors.grey.darken-1;
    }
  }
}

.default-list {
  .v-list__tile {
    .v-list__tile__title {
      color: $colors.secondary;
    }

    &:hover {
      .v-list__tile__title {
        color: $colors.primary;
      }
    }
  }
}

.rotated-90 {
  transform: rotate(90deg);
}

.rotated-180 {
  transform: rotate(180deg);
}

.rotated-270 {
  transform: rotate(270deg);
}

.v-hide {
  display: none;
}
